@model StudentApp.Models.Envanterler

@{
    ViewData["Title"] = "Yeni Envanter Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
      <div class="card-header">
   <h4><i class="fas fa-box-open me-2"></i>Yeni Envanter Ekle</h4>
      </div>
  <div class="card-body">
    <form asp-action="Create" method="post">
   <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
               
       <div class="mb-3">
     <label asp-for="EnvanterAdi" class="form-label"></label>
       <div class="input-group">
       <span class="input-group-text"><i class="fas fa-box"></i></span>
        <input asp-for="EnvanterAdi" class="form-control" placeholder="Örn: Eldiven, Tekme Minderi, vb." />
          </div>
   <span asp-validation-for="EnvanterAdi" class="text-danger"></span>
           </div>

      <div class="row">
  <div class="col-md-6 mb-3">
          <label asp-for="Adet" class="form-label"></label>
      <div class="input-group">
         <span class="input-group-text"><i class="fas fa-sort-numeric-up"></i></span>
     <input asp-for="Adet" type="number" class="form-control" placeholder="0" min="1" max="200" />
  </div>
    <span asp-validation-for="Adet" class="text-danger"></span>
        </div>

      <div class="col-md-6 mb-3">
       <label asp-for="BirimFiyat" class="form-label"></label>
      <div class="input-group">
       <span class="input-group-text" style="font-family: Arial, sans-serif;">?</span>
    <input asp-for="BirimFiyat" type="number" step="0.01" class="form-control" placeholder="0.00" min="0.01" />
  </div>
      <span asp-validation-for="BirimFiyat" class="text-danger"></span>
      </div>
</div>

   <div class="mb-3">
   <label asp-for="Aciklama" class="form-label">Açýklama / Notlar</label>
     <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Envanter hakkýnda not veya açýklama..."></textarea>
  <span asp-validation-for="Aciklama" class="text-danger"></span>
           <small class="form-text text-muted">Opsiyonel - Envanter hakkýnda ek bilgiler</small>
     </div>

    <div class="alert alert-info" role="alert">
      <i class="fas fa-info-circle me-2"></i>
       <strong>Bilgi:</strong> Yeni eklenen envanter otomatik olarak aktif durumda olacaktýr.
  </div>

      <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary">
              <i class="fas fa-arrow-left me-1"></i>Listeye Dön
       </a>
     <button type="submit" class="btn btn-success">
                 <i class="fas fa-save me-1"></i>Envanter Oluþtur
     </button>
    </div>
     </form>
            </div>
</div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
    // Toplam deðer hesaplama
    $(document).ready(function() {
            function hesaplaToplamDeger() {
         var adet = parseFloat($('#Adet').val()) || 0;
     var birimFiyat = parseFloat($('#BirimFiyat').val()) || 0;
    var toplam = adet * birimFiyat;
       
     if (toplam > 0) {
     $('#toplamDegerBilgi').remove();
       var bilgi = '<div id="toplamDegerBilgi" class="alert alert-success mt-2"><i class="fas fa-calculator me-2"></i>Toplam Deðer: <strong>?' + toplam.toFixed(2) + '</strong></div>';
$('.card-body form').append(bilgi);
       }
    }
          
  $('#Adet, #BirimFiyat').on('input', hesaplaToplamDeger);
        });
    </script>
}
