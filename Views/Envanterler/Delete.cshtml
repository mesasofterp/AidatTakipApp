@model StudentApp.Models.Envanterler

@{
    ViewData["Title"] = "Envanter Sil";
    var toplamDeger = Model.Adet * Model.AlisFiyat;
}

<div class="row justify-content-center">
    <div class="col-md-8">
 <div class="card border-danger">
     <div class="card-header bg-danger text-white">
    <h4><i class="fas fa-exclamation-triangle me-2"></i>Envanter Silme Onayý</h4>
   </div>
  <div class="card-body">
   <div class="alert alert-warning" role="alert">
  <i class="fas fa-exclamation-triangle me-2"></i>
       <strong>Uyarý:</strong> Bu envanteri silmek üzeresiniz. Bu iþlem geri alýnamaz. Devam etmek istediðinizden emin misiniz?
     </div>

      <h5 class="mb-3">Silinecek Envanter Bilgileri:</h5>
  
     <dl class="row">
 <dt class="col-sm-4">
     <i class="fas fa-box me-2"></i>Envanter Adý
    </dt>
      <dd class="col-sm-8">
       <strong>@Model.EnvanterAdi</strong>
 </dd>

     <dt class="col-sm-4">
    <i class="fas fa-sort-numeric-up me-2"></i>Adet
     </dt>
 <dd class="col-sm-8">
     <span class="badge bg-info">@Model.Adet</span>
  </dd>

   <dt class="col-sm-4">
      <i class="fas fa-shopping-cart me-2"></i>Alýþ Fiyatý
 </dt>
      <dd class="col-sm-8">
 <span><span style="font-family: Arial, sans-serif;">&#8378;</span>@Model.AlisFiyat.ToString("N2")</span>
   </dd>

      <dt class="col-sm-4">
     <i class="fas fa-tag me-2"></i>Satýþ Fiyatý
     </dt>
      <dd class="col-sm-8">
  <span><span style="font-family: Arial, sans-serif;">&#8378;</span>@Model.SatisFiyat.ToString("N2")</span>
 </dd>

   <dt class="col-sm-4">
 <i class="fas fa-calculator me-2"></i>Toplam Alýþ Deðeri
  </dt>
 <dd class="col-sm-8">
   <span class="badge bg-danger"><span style="font-family: Arial, sans-serif;">&#8378;</span>@toplamDeger.ToString("N2")</span>
   </dd>

  <dt class="col-sm-4">
      <i class="fas fa-toggle-on me-2"></i>Durum
  </dt>
     <dd class="col-sm-8">
  @if (Model.Aktif)
  {
   <span class="badge bg-success">
   <i class="fas fa-check-circle me-1"></i>Aktif
 </span>
        }
  else
       {
 <span class="badge bg-secondary">
  <i class="fas fa-times-circle me-1"></i>Pasif
   </span>
    }
      </dd>

      @if (!string.IsNullOrWhiteSpace(Model.Aciklama))
  {
   <dt class="col-sm-4">
    <i class="fas fa-comment me-2"></i>Açýklama
     </dt>
 <dd class="col-sm-8">
 <div class="alert alert-light mb-0">
     @Model.Aciklama
   </div>
    </dd>
      }
      </dl>

     <form asp-action="Delete" method="post" class="mt-4">
 <input asp-for="Id" type="hidden" />
  
       <div class="d-flex justify-content-between">
   <a asp-action="Index" class="btn btn-secondary">
    <i class="fas fa-arrow-left me-1"></i>Ýptal Et
   </a>
   <button type="submit" class="btn btn-danger">
       <i class="fas fa-trash me-1"></i>Evet, Sil
  </button>
       </div>
        </form>
  </div>
 </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form submit onayý
    $('form').on('submit', function(e) {
  if (!confirm('Bu envanteri silmek istediðinizden emin misiniz? Bu iþlem geri alýnamaz!')) {
      e.preventDefault();
     return false;
        }
 });
    </script>
}
