@model StudentApp.Models.Envanterler

@{
    ViewData["Title"] = "Envanter Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
 <div class="card-header">
      <h4><i class="fas fa-edit me-2"></i>Envanter Düzenle</h4>
  </div>
    <div class="card-body">
         <form asp-action="Edit" method="post">
       <input asp-for="Id" type="hidden" />
    <input asp-for="Version" type="hidden" />
       <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
          
    <div class="mb-3">
          <label asp-for="EnvanterAdi" class="form-label"></label>
          <div class="input-group">
    <span class="input-group-text"><i class="fas fa-box"></i></span>
        <input asp-for="EnvanterAdi" class="form-control" placeholder="Örn: Eldiven, Tekme Minderi, vb." />
   </div>
 <span asp-validation-for="EnvanterAdi" class="text-danger"></span>
 </div>

        <div class="row">
     <div class="col-md-6 mb-3">
         <label asp-for="Adet" class="form-label"></label>
    <div class="input-group">
   <span class="input-group-text"><i class="fas fa-sort-numeric-up"></i></span>
    <input asp-for="Adet" type="number" class="form-control" placeholder="0" min="1" max="200" />
   </div>
          <span asp-validation-for="Adet" class="text-danger"></span>
     </div>

         <div class="col-md-6 mb-3">
        <label asp-for="BirimFiyat" class="form-label"></label>
   <div class="input-group">
      <span class="input-group-text" style="font-family: Arial, sans-serif;">?</span>
 <input asp-for="BirimFiyat" type="number" step="0.01" class="form-control" placeholder="0.00" min="0.01" />
 </div>
 <span asp-validation-for="BirimFiyat" class="text-danger"></span>
          </div>
  </div>

      <div class="mb-3">
       <div class="form-check form-switch">
    <input asp-for="Aktif" class="form-check-input" type="checkbox" role="switch" />
  <label asp-for="Aktif" class="form-check-label"></label>
      </div>
  <small class="form-text text-muted">
 <i class="fas fa-info-circle me-1"></i>Pasif envanterler toplam deðer hesaplamalarýna dahil edilmez.
  </small>
   </div>

      <div class="mb-3">
      <label asp-for="Aciklama" class="form-label">Açýklama / Notlar</label>
       <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Envanter hakkýnda not veya açýklama..."></textarea>
  <span asp-validation-for="Aciklama" class="text-danger"></span>
          <small class="form-text text-muted">Opsiyonel - Envanter hakkýnda ek bilgiler</small>
          </div>

   <div id="toplamDegerBilgi" class="alert alert-info">
        <i class="fas fa-calculator me-2"></i>
      <strong>Toplam Deðer:</strong> <span id="toplamDeger" style="font-family: Arial, sans-serif;">?@((Model.Adet * Model.BirimFiyat).ToString("N2"))</span>
       </div>

       <div class="d-flex justify-content-between mt-4">
         <a asp-action="Index" class="btn btn-secondary">
   <i class="fas fa-arrow-left me-1"></i>Listeye Dön
        </a>
      <button type="submit" class="btn btn-warning">
          <i class="fas fa-save me-1"></i>Deðiþiklikleri Kaydet
     </button>
   </div>
 </form>
   </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
<script>
    // Toplam deðer hesaplama
  $(document).ready(function() {
   function hesaplaToplamDeger() {
  var adet = parseFloat($('#Adet').val()) || 0;
     var birimFiyat = parseFloat($('#BirimFiyat').val()) || 0;
   var toplam = adet * birimFiyat;
            
   $('#toplamDeger').text('?' + toplam.toFixed(2));
 }
        
   $('#Adet, #BirimFiyat').on('input', hesaplaToplamDeger);
    });
    </script>
}
