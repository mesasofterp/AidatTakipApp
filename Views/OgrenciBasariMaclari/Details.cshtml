@model StudentApp.Models.OgrenciBasariMaclari

@{
    ViewData["Title"] = "Maç Detayları";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-futbol me-2"></i>Maç Detayları</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-trophy me-2"></i>Başarı
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Basari != null)
                        {
                            <a asp-controller="OgrenciBasarilari" asp-action="Details" asp-route-id="@Model.BasariId" class="text-decoration-none">
                                <strong>@Model.Basari.Baslik</strong>
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-user-friends me-2"></i>Rakip Adı
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.RakipAdi</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-tag me-2"></i>Tür
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.Tur))
                        {
                            <span class="badge bg-info">@Model.Tur</span>
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-list me-2"></i>Kategori
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.Kategori))
                        {
                            <span class="badge bg-secondary">@Model.Kategori</span>
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-trophy me-2"></i>Skor
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.Skor))
                        {
                            <strong class="fs-5">@Model.Skor</strong>
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-flag me-2"></i>Sonuç
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.Sonuc))
                        {
                            @if (Model.Sonuc.ToLower().Contains("kazan") || Model.Sonuc.ToLower().Contains("galip") || Model.Sonuc.ToLower().Contains("win"))
                            {
                                <span class="badge bg-success fs-6">@Model.Sonuc</span>
                            }
                            else if (Model.Sonuc.ToLower().Contains("kaybet") || Model.Sonuc.ToLower().Contains("mağlup") || Model.Sonuc.ToLower().Contains("lose"))
                            {
                                <span class="badge bg-danger fs-6">@Model.Sonuc</span>
                            }
                            else if (Model.Sonuc.ToLower().Contains("beraber") || Model.Sonuc.ToLower().Contains("draw"))
                            {
                                <span class="badge bg-warning fs-6">@Model.Sonuc</span>
                            }
                            else
                            {
                                <span class="badge bg-primary fs-6">@Model.Sonuc</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-calendar me-2"></i>Tarih
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Tarih.HasValue)
                        {
                            <i class="fas fa-calendar-alt me-1"></i>@Model.Tarih.Value.ToString("dd.MM.yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-map-marker-alt me-2"></i>Lokasyon
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.Lokasyon))
                        {
                            <i class="fas fa-map-marker-alt me-1"></i>@Model.Lokasyon
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Durum</dt>
                    <dd class="col-sm-8">
                        @if (Model.Aktif)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check me-1"></i>Aktif
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-times me-1"></i>Pasif
                            </span>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-route-basariId="@Model.BasariId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Listeye Dön
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-1"></i>Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

