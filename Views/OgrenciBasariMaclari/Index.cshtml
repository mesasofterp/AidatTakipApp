@model IEnumerable<StudentApp.Models.OgrenciBasariMaclari>

@{
    ViewData["Title"] = "Başarı Maçları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-futbol me-2"></i>Başarı Maçları</h2>
    @if (ViewBag.BasariId != null)
    {
        <a asp-action="Create" asp-route-basariId="@ViewBag.BasariId" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Yeni Maç Ekle
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (ViewBag.BasariBaslik != null)
{
    <div class="alert alert-info">
        <i class="fas fa-trophy me-2"></i>
        <strong>Başarı:</strong> @ViewBag.BasariBaslik
        @if (ViewBag.OgrenciAdi != null)
        {
            <span class="ms-2">
                <i class="fas fa-user me-1"></i>
                <strong>Öğrenci:</strong> @ViewBag.OgrenciAdi
            </span>
        }
        <a asp-controller="OgrenciBasarilari" asp-action="Details" asp-route-id="@ViewBag.BasariId" class="btn btn-sm btn-outline-primary ms-2">
            <i class="fas fa-eye me-1"></i>Başarı Detayları
        </a>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th><i class="fas fa-user-friends me-1"></i>Rakip Adı</th>
                    <th><i class="fas fa-tag me-1"></i>Tür</th>
                    <th><i class="fas fa-list me-1"></i>Kategori</th>
                    <th><i class="fas fa-trophy me-1"></i>Skor</th>
                    <th><i class="fas fa-flag me-1"></i>Sonuç</th>
                    <th><i class="fas fa-calendar me-1"></i>Tarih</th>
                    <th><i class="fas fa-map-marker-alt me-1"></i>Lokasyon</th>
                    <th class="text-center"><i class="fas fa-cog me-1"></i>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.RakipAdi</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Tur))
                            {
                                <span class="badge bg-info">@item.Tur</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Kategori))
                            {
                                <span class="badge bg-secondary">@item.Kategori</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Skor))
                            {
                                <strong>@item.Skor</strong>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Sonuc))
                            {
                                var sonucLower = item.Sonuc.ToLower();
                                string badgeClass = "bg-primary";
                                if (sonucLower.Contains("kazan") || sonucLower.Contains("galip") || sonucLower.Contains("win"))
                                {
                                    badgeClass = "bg-success";
                                }
                                else if (sonucLower.Contains("kaybet") || sonucLower.Contains("mağlup") || sonucLower.Contains("lose"))
                                {
                                    badgeClass = "bg-danger";
                                }
                                else if (sonucLower.Contains("beraber") || sonucLower.Contains("draw"))
                                {
                                    badgeClass = "bg-warning";
                                }
                                <span class="badge @badgeClass">@item.Sonuc</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (item.Tarih.HasValue)
                            {
                                <i class="fas fa-calendar-alt me-1"></i>@item.Tarih.Value.ToString("dd.MM.yyyy")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Lokasyon))
                            {
                                <i class="fas fa-map-marker-alt me-1"></i>@item.Lokasyon
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detaylar">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="fas fa-info-circle me-2"></i>
        Henüz maç kaydı bulunmamaktadır.
        @if (ViewBag.BasariId != null)
        {
            <a asp-action="Create"
               asp-route-basariId="@ViewBag.BasariId"
               class="alert-link">
                İlk maçı eklemek için tıklayın
            </a>
        }
    </div>

}

<div class="mt-3">
    @if (ViewBag.BasariId != null)
    {
        <a asp-controller="OgrenciBasarilari" asp-action="Details" asp-route-id="@ViewBag.BasariId" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Başarı Detaylarına Dön
        </a>
    }
    else
    {
        <a asp-controller="OgrenciBasarilari" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Başarı Listesine Dön
        </a>
    }
</div>

