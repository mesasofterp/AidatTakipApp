@model StudentApp.Models.OgrenciBasarilari

@{
    ViewData["Title"] = "Başarı Sil";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle me-2"></i>Başarı Silme Onayı</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Uyarı:</strong> Bu başarıyı silmek üzeresiniz. Bu işlem geri alınamaz. Devam etmek istediğinizden emin misiniz?
                </div>

                <h5 class="mb-3">Silinecek Başarı Bilgileri:</h5>
                
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-heading me-2"></i>Başlık
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Baslik</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-tag me-2"></i>Tür
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary">@Model.Turu</span>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-calendar me-2"></i>Tarih
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Tarih.HasValue)
                        {
                            <i class="fas fa-calendar-alt me-1"></i>@Model.Tarih.Value.ToString("dd.MM.yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-user me-2"></i>Öğrenci
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Ogrenci != null)
                        {
                            <a asp-controller="Ogrenciler" asp-action="Details" asp-route-id="@Model.OgrenciId" class="text-decoration-none">
                                @Model.Ogrenci.OgrenciAdi @Model.Ogrenci.OgrenciSoyadi
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>

                    @if (!string.IsNullOrWhiteSpace(Model.Aciklama))
                    {
                        <dt class="col-sm-4">
                            <i class="fas fa-comment me-2"></i>Açıklama
                        </dt>
                        <dd class="col-sm-8">
                            <div class="alert alert-light mb-0">
                                @Model.Aciklama
                            </div>
                        </dd>
                    }
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input asp-for="Id" type="hidden" />
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-route-ogrenciId="@Model.OgrenciId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>İptal Et
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Evet, Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form submit onayı
        $('form').on('submit', function(e) {
            if (!confirm('Bu başarıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}

