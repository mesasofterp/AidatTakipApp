@model IEnumerable<StudentApp.Models.OgrenciBasarilari>

@{
    ViewData["Title"] = "Öğrenci Başarıları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trophy me-2"></i>Öğrenci Başarıları</h2>
    <a asp-action="Create" asp-route-ogrenciId="@ViewBag.OgrenciId" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Yeni Başarı Ekle
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (ViewBag.OgrenciAdi != null)
{
    <div class="alert alert-info">
        <i class="fas fa-user me-2"></i>
        <strong>Öğrenci:</strong> @ViewBag.OgrenciAdi
        <a asp-controller="Ogrenciler" asp-action="Details" asp-route-id="@ViewBag.OgrenciId" class="btn btn-sm btn-outline-primary ms-2">
            <i class="fas fa-eye me-1"></i>Öğrenci Detayları
        </a>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th><i class="fas fa-trophy me-1"></i>Başlık</th>
                    <th><i class="fas fa-tag me-1"></i>Tür</th>
                    <th><i class="fas fa-calendar me-1"></i>Tarih</th>
                    <th><i class="fas fa-user me-1"></i>Öğrenci</th>
                    <th><i class="fas fa-comment me-1"></i>Açıklama</th>
                    <th class="text-center"><i class="fas fa-cog me-1"></i>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Baslik</strong>
                        </td>
                        <td>
                            <span class="badge bg-primary">@item.Turu</span>
                        </td>
                        <td>
                            @if (item.Tarih.HasValue)
                            {
                                <i class="fas fa-calendar-alt me-1"></i>@item.Tarih.Value.ToString("dd.MM.yyyy")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (item.Ogrenci != null)
                            {
                                <a asp-controller="Ogrenciler" asp-action="Details" asp-route-id="@item.OgrenciId" class="text-decoration-none">
                                    @item.Ogrenci.OgrenciAdi @item.Ogrenci.OgrenciSoyadi
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Aciklama))
                            {
                                <small>@(item.Aciklama.Length > 50 ? item.Aciklama.Substring(0, 50) + "..." : item.Aciklama)</small>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detaylar">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="fas fa-info-circle me-2"></i>
        Henüz başarı kaydı bulunmamaktadır.
        <a asp-action="Create" asp-route-ogrenciId="@ViewBag.OgrenciId" class="alert-link">İlk başarıyı eklemek için tıklayın</a>.
    </div>
}

<div class="mt-3">
    @if (ViewBag.OgrenciId != null)
    {
        <a asp-controller="Ogrenciler" asp-action="Details" asp-route-id="@ViewBag.OgrenciId" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Öğrenci Detaylarına Dön
        </a>
    }
    else
    {
        <a asp-controller="Ogrenciler" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Öğrenci Listesine Dön
        </a>
    }
</div>

