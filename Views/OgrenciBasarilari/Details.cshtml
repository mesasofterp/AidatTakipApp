@model StudentApp.Models.OgrenciBasarilari

@{
    ViewData["Title"] = "Başarı Detayları";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-trophy me-2"></i>Başarı Detayları</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-heading me-2"></i>Başlık
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Baslik</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-tag me-2"></i>Tür
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary">@Model.Turu</span>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-calendar me-2"></i>Tarih
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Tarih.HasValue)
                        {
                            <i class="fas fa-calendar-alt me-1"></i>@Model.Tarih.Value.ToString("dd.MM.yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-user me-2"></i>Öğrenci
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Ogrenci != null)
                        {
                            <a asp-controller="Ogrenciler" asp-action="Details" asp-route-id="@Model.OgrenciId" class="text-decoration-none">
                                <i class="fas fa-user-circle me-1"></i>@Model.Ogrenci.OgrenciAdi @Model.Ogrenci.OgrenciSoyadi
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>

                    @if (!string.IsNullOrWhiteSpace(Model.Aciklama))
                    {
                        <dt class="col-sm-4">
                            <i class="fas fa-comment me-2"></i>Açıklama
                        </dt>
                        <dd class="col-sm-8">
                            <div class="alert alert-light">
                                @Model.Aciklama
                            </div>
                        </dd>
                    }

                    <dt class="col-sm-4">Durum</dt>
                    <dd class="col-sm-8">
                        @if (Model.Aktif)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check me-1"></i>Aktif
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-times me-1"></i>Pasif
                            </span>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-route-ogrenciId="@Model.OgrenciId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Listeye Dön
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-1"></i>Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Maçlar Bölümü -->
<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-futbol me-2"></i>Başarı Maçları</h5>
                <a asp-controller="OgrenciBasariMaclari" asp-action="Create" asp-route-basariId="@Model.Id" class="btn btn-sm btn-success">
                    <i class="fas fa-plus me-1"></i>Maç Ekle
                </a>
            </div>
            <div class="card-body">
                @if (Model.OgrenciBasariMaclari != null && Model.OgrenciBasariMaclari.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-user-friends me-1"></i>Rakip Adı</th>
                                    <th><i class="fas fa-tag me-1"></i>Tür</th>
                                    <th><i class="fas fa-list me-1"></i>Kategori</th>
                                    <th><i class="fas fa-trophy me-1"></i>Skor</th>
                                    <th><i class="fas fa-flag me-1"></i>Sonuç</th>
                                    <th><i class="fas fa-calendar me-1"></i>Tarih</th>
                                    <th class="text-center"><i class="fas fa-cog me-1"></i>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mac in Model.OgrenciBasariMaclari.OrderByDescending(m => m.Tarih).ThenByDescending(m => m.Id))
                                {
                                    <tr>
                                        <td>
                                            <strong>@mac.RakipAdi</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(mac.Tur))
                                            {
                                                <span class="badge bg-info">@mac.Tur</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(mac.Kategori))
                                            {
                                                <span class="badge bg-secondary">@mac.Kategori</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(mac.Skor))
                                            {
                                                <strong>@mac.Skor</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(mac.Sonuc))
                                            {
                                                @if (mac.Sonuc.ToLower().Contains("kazan") || mac.Sonuc.ToLower().Contains("galip") || mac.Sonuc.ToLower().Contains("win"))
                                                {
                                                    <span class="badge bg-success">@mac.Sonuc</span>
                                                }
                                                else if (mac.Sonuc.ToLower().Contains("kaybet") || mac.Sonuc.ToLower().Contains("mağlup") || mac.Sonuc.ToLower().Contains("lose"))
                                                {
                                                    <span class="badge bg-danger">@mac.Sonuc</span>
                                                }
                                                else if (mac.Sonuc.ToLower().Contains("beraber") || mac.Sonuc.ToLower().Contains("draw"))
                                                {
                                                    <span class="badge bg-warning">@mac.Sonuc</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">@mac.Sonuc</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (mac.Tarih.HasValue)
                                            {
                                                <i class="fas fa-calendar-alt me-1"></i>@mac.Tarih.Value.ToString("dd.MM.yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-controller="OgrenciBasariMaclari" asp-action="Details" asp-route-id="@mac.Id" class="btn btn-sm btn-info" title="Detaylar">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-controller="OgrenciBasariMaclari" asp-action="Edit" asp-route-id="@mac.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-controller="OgrenciBasariMaclari" asp-action="Delete" asp-route-id="@mac.Id" class="btn btn-sm btn-danger" title="Sil">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="OgrenciBasariMaclari" asp-action="Index" asp-route-basariId="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-list me-1"></i>Tüm Maçları Görüntüle
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Bu başarı için henüz maç kaydı bulunmamaktadır.
                        <a asp-controller="OgrenciBasariMaclari" asp-action="Create" asp-route-basariId="@Model.Id" class="alert-link">
                            <i class="fas fa-plus me-1"></i>İlk maçı eklemek için tıklayın
                        </a>.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

