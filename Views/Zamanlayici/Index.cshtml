@model List<StudentApp.Models.ZamanlayiciAyarlar>
@{
    ViewData["Title"] = "Zamanlayıcı Ayarları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-clock"></i> Zamanlayıcı Ayarları
                    </h4>
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus-circle"></i> Yeni Zamanlayıcı Ekle
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info">
                            <h5><i class="fas fa-info-circle"></i> Aktif Zamanlayıcı Yok</h5>
                            <p>Şu anda aktif bir zamanlayıcı bulunmuyor. Yeni bir zamanlayıcı oluşturmak için yukarıdaki butona tıklayın.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>İsim</th>
                                        <th>Gün Ofseti</th>
                                        <th>Çalışma Zamanı</th>
                                        <th>Durum</th>
                                        <th>Oluşturulma</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var scheduler in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@scheduler.Isim</strong>
                                                @if (!string.IsNullOrEmpty(scheduler.Aciklama))
                                                {
                                                    <br />
                                                    <small class="text-muted">@scheduler.Aciklama</small>
                                                }
                                            </td>
                                            <td>
                                                @if (scheduler.GorevCalismaGunuOfseti == 0)
                                                {
                                                    <span class="badge bg-primary">Son ödeme tarihi günü</span>
                                                }
                                                else if (scheduler.GorevCalismaGunuOfseti < 0)
                                                {
                                                    <span class="badge bg-info">@Math.Abs(scheduler.GorevCalismaGunuOfseti) gün önce</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@scheduler.GorevCalismaGunuOfseti gün sonra</span>
                                                }
                                            </td>
                                            <td>
                                                Her gün <strong>@scheduler.Saat.ToString("00"):@scheduler.Dakika.ToString("00")</strong>
                                                <br />
                                                <small class="text-muted"><code>@scheduler.CronIfadesi</code></small>
                                            </td>
                                            <td>
                                                @if (scheduler.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>@scheduler.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@scheduler.Id" class="btn btn-warning btn-sm" title="Düzenle">
                                                        <i class="fas fa-edit"></i> Düzenle
                                                    </a>
                                                    <form asp-action="Delete" asp-route-id="@scheduler.Id" method="post" class="d-inline" onsubmit="return confirm('Bu zamanlayıcıyı silmek istediğinizden emin misiniz?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger btn-sm" title="Sil">
                                                            <i class="fas fa-trash-alt"></i> Sil
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

