@model StudentApp.Models.ZamanlayiciAyarlar?
@{
    ViewData["Title"] = "Zamanlayıcı Ayarları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-clock"></i> Zamanlayıcı Ayarları
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model == null || !Model.Aktif)
                    {
                        <div class="alert alert-info">
                            <h5><i class="bi bi-info-circle"></i> Aktif Zamanlayıcı Yok</h5>
                            <p>Şu anda aktif bir zamanlayıcı bulunmuyor. Yeni bir zamanlayıcı oluşturmak için aşağıdaki butona tıklayın.</p>
                            <div class="mt-3">
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Yeni Zamanlayıcı Oluştur
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <h5 class="mb-3">Aktif Zamanlayıcı</h5>
                                <table class="table table-bordered table-hover">
                                    <tbody>
                                        <tr>
                                            <th width="200">İsim:</th>
                                            <td>@Model.Isim</td>
                                        </tr>
                                        <tr>
                                            <th>Durum:</th>
                                            <td>
                                                @if (Model.Aktif && Model.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Çalışma Zamanı:</th>
                                            <td>Her gün <strong>@Model.Saat.ToString("00"):@Model.Dakika.ToString("00")</strong> da çalışır</td>
                                        </tr>
                                        <tr>
                                            <th>Cron Expression:</th>
                                            <td><code>@Model.CronIfadesi</code></td>
                                        </tr>
                                        <tr>
                                            <th>SMS Mesajı:</th>
                                            <td>
                                                <div class="border rounded p-2 bg-light">
                                                    <small>@Model.MesajSablonu</small>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Oluşturulma:</th>
                                            <td>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                        </tr>
                                        @if (Model.Aciklama != null)
                                        {
                                            <tr>
                                                <th>Açıklama:</th>
                                                <td>@Model.Aciklama</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h6 class="mb-3">İşlemler</h6>
                            <div class="d-flex gap-2">
                                <a asp-action="Create" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Zamanlayıcıyı Güncelle
                                </a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Zamanlayıcıyı durdurmak istediğinizden emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-stop-circle"></i> Zamanlayıcıyı Durdur
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

