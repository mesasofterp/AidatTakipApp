@model StudentApp.Models.Seanslar

@{
    ViewData["Title"] = "Seans Sil";
    var kayitliOgrenciSayisi = ViewBag.KayitliOgrenciSayisi ?? 0;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
   <div class="card shadow-lg border-0 border-danger">
     <div class="card-header bg-danger text-white">
  <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Seans Sil</h4>
    </div>
        <div class="card-body">
    <div class="alert alert-warning" role="alert">
 <i class="fas fa-exclamation-triangle me-2"></i>
       <strong>Dikkat!</strong> Bu iþlem geri alýnamaz. Bu seansý silmek istediðinizden emin misiniz?
       </div>

         @if (kayitliOgrenciSayisi > 0)
          {
        <div class="alert alert-danger" role="alert">
         <i class="fas fa-ban me-2"></i>
   <strong>UYARI:</strong> Bu seansa kayýtlý <strong>@kayitliOgrenciSayisi öðrenci</strong> bulunmaktadýr!
  <br />Seansý silmeden önce öðrencilerin seans bilgilerini güncelleyiniz.
       </div>
    }

 <h5 class="mb-3">Silinecek Seans Bilgileri:</h5>
     <dl class="row">
      <dt class="col-sm-4">Gün</dt>
        <dd class="col-sm-8">
   <span class="badge bg-primary">@Model.Gun?.Gun</span>
    </dd>

       <dt class="col-sm-4">Seans Adý</dt>
 <dd class="col-sm-8"><strong>@Model.SeansAdi</strong></dd>

    <dt class="col-sm-4">Baþlangýç Saati</dt>
          <dd class="col-sm-8">
     <i class="fas fa-clock me-1"></i>@Model.SeansBaslangicSaati.ToString(@"hh\:mm")
        </dd>

   <dt class="col-sm-4">Bitiþ Saati</dt>
 <dd class="col-sm-8">
<i class="fas fa-clock me-1"></i>@Model.SeansBitisSaati.ToString(@"hh\:mm")
    </dd>

     <dt class="col-sm-4">Kapasite</dt>
    <dd class="col-sm-8">
     @if (Model.SeansKapasitesi.HasValue)
       {
       <span>@Model.SeansKapasitesi kiþi</span>
      }
     else
  {
<span class="text-muted">Sýnýrsýz</span>
        }
   </dd>

  <dt class="col-sm-4">Kayýtlý Öðrenci</dt>
     <dd class="col-sm-8">
    <span class="badge @(kayitliOgrenciSayisi > 0 ? "bg-danger" : "bg-secondary")">
       @kayitliOgrenciSayisi
 </span>
     </dd>
    </dl>

            <form asp-action="Delete" method="post">
  <input type="hidden" asp-for="Id" />
      <div class="d-flex justify-content-between gap-2 mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Ýptal
      </a>
    <button type="submit" class="btn btn-danger" @(kayitliOgrenciSayisi > 0 ? "disabled" : "")>
        <i class="fas fa-trash me-1"></i>Evet, Sil
       </button>
       </div>
     </form>
    </div>
      </div>
    </div>
</div>
