@model StudentApp.Models.Seanslar

@{
    ViewData["Title"] = "Seans Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
 <div class="card shadow-lg border-0">
      <div class="card-header bg-warning text-dark">
       <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Seans Düzenle</h4>
            </div>
            <div class="card-body">
    <form asp-action="Edit" method="post">
 <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
      <input type="hidden" asp-for="Id" />

    <div class="mb-3">
     <label class="form-label">
       <i class="fas fa-calendar-day me-1"></i>Günler <span class="text-danger">*</span>
     </label>
 <small class="form-text text-muted d-block mb-2">Seansýn yapýlacaðý günleri seçin (Birden fazla gün seçebilirsiniz)</small>
        <div class="row">
   @{
 var gunler = ViewBag.Gunler as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
 var selectedGunIds = ViewBag.SelectedGunIds as List<long> ?? new List<long>();
      if (gunler != null)
    {
 foreach (var gun in gunler)
   {
  var isChecked = selectedGunIds.Contains(long.Parse(gun.Value));
   <div class="col-md-4 col-sm-6 mb-2">
    <div class="form-check">
      <input class="form-check-input" 
      type="checkbox" 
     name="SelectedGunIds" 
     value="@gun.Value" 
  id="gun_@gun.Value"
       @(isChecked ? "checked" : "") />
<label class="form-check-label" for="gun_@gun.Value">
     <i class="fas fa-calendar-day me-1"></i>@gun.Text
     </label>
   </div>
</div>
     }
     }
      }
 </div>
<span class="text-danger" id="gun-error"></span>
     </div>

        <div class="mb-3">
      <label asp-for="SeansAdi" class="form-label">
        <i class="fas fa-tag me-1"></i>Seans Adý <span class="text-danger">*</span>
            </label>
     <input asp-for="SeansAdi" class="form-control" />
     <span asp-validation-for="SeansAdi" class="text-danger"></span>
 </div>

       <div class="row">
   <div class="col-md-6 mb-3">
     <label asp-for="SeansBaslangicSaati" class="form-label">
        <i class="fas fa-play-circle me-1"></i>Baþlangýç Saati <span class="text-danger">*</span>
     </label>
    <div class="input-group">
    <span class="input-group-text"><i class="fas fa-clock"></i></span>
<input asp-for="SeansBaslangicSaati" type="time" class="form-control" />
     </div>
          <span asp-validation-for="SeansBaslangicSaati" class="text-danger"></span>
    </div>
<div class="col-md-6 mb-3">
   <label asp-for="SeansBitisSaati" class="form-label">
  <i class="fas fa-stop-circle me-1"></i>Bitiþ Saati <span class="text-danger">*</span>
        </label>
  <div class="input-group">
    <span class="input-group-text"><i class="fas fa-clock"></i></span>
  <input asp-for="SeansBitisSaati" type="time" class="form-control" />
</div>
   <span asp-validation-for="SeansBitisSaati" class="text-danger"></span>
        </div>
</div>

       <div class="row">
      <div class="col-md-6 mb-3">
  <label asp-for="SeansKapasitesi" class="form-label">
 <i class="fas fa-users me-1"></i>Seans Kapasitesi
    </label>
   <div class="input-group">
        <span class="input-group-text"><i class="fas fa-users"></i></span>
    <input asp-for="SeansKapasitesi" type="number" class="form-control" min="1" />
    </div>
  <span asp-validation-for="SeansKapasitesi" class="text-danger"></span>
  <small class="form-text text-muted">Opsiyonel - Boþ býrakýlýrsa sýnýrsýz</small>
            </div>
   <div class="col-md-6 mb-3">
  <label asp-for="SeansMevcudu" class="form-label">
 <i class="fas fa-user-check me-1"></i>Seans Mevcudu
    </label>
  <div class="input-group">
  <span class="input-group-text"><i class="fas fa-user-check"></i></span>
      <input asp-for="SeansMevcudu" type="number" class="form-control" min="0" />
         </div>
<span asp-validation-for="SeansMevcudu" class="text-danger"></span>
   </div>
    </div>

       <div class="mb-3">
   <label asp-for="Aciklama" class="form-label">
        <i class="fas fa-sticky-note me-1"></i>Notlar / Açýklama
  </label>
         <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
   <span asp-validation-for="Aciklama" class="text-danger"></span>
   </div>

       <div class="mb-3">
   <div class="form-check form-switch">
    <input asp-for="Aktif" class="form-check-input" type="checkbox" role="switch" />
  <label asp-for="Aktif" class="form-check-label">Seans Aktif</label>
    </div>
          </div>

        <div class="d-flex justify-content-between gap-2 mt-4">
     <a asp-action="Index" class="btn btn-secondary">
 <i class="fas fa-arrow-left me-1"></i>Listeye Dön
   </a>
        <button type="submit" class="btn btn-warning">
        <i class="fas fa-save me-1"></i>Deðiþiklikleri Kaydet
 </button>
        </div>
  </form>
     </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script>
   // Gün seçimi kontrolü
  const gunCheckboxes = document.querySelectorAll('input[name="SelectedGunIds"]');
     const gunError = document.getElementById('gun-error');
   const form = document.querySelector('form');

     form.addEventListener('submit', function(e) {
  const checkedBoxes = document.querySelectorAll('input[name="SelectedGunIds"]:checked');
    
    if (checkedBoxes.length === 0) {
     e.preventDefault();
       gunError.textContent = 'En az bir gün seçmelisiniz.';
  gunError.style.display = 'block';
 return false;
   } else {
       gunError.textContent = '';
 gunError.style.display = 'none';
     }

       // Baþlangýç ve bitiþ saati validasyonu
const baslangic = document.querySelector('input[name="SeansBaslangicSaati"]').value;
     const bitis = document.querySelector('input[name="SeansBitisSaati"]').value;
  
      if (baslangic && bitis && baslangic >= bitis) {
   e.preventDefault();
 alert('Bitiþ saati, baþlangýç saatinden sonra olmalýdýr!');
    return false;
 }
   });

// Checkbox deðiþiminde hata mesajýný temizle
   gunCheckboxes.forEach(checkbox => {
checkbox.addEventListener('change', function() {
        const checkedBoxes = document.querySelectorAll('input[name="SelectedGunIds"]:checked');
       if (checkedBoxes.length > 0) {
   gunError.textContent = '';
       gunError.style.display = 'none';
        }
  });
});
    </script>
}
