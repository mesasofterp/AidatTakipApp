@model IEnumerable<StudentApp.Models.Seanslar>

@{
    ViewData["Title"] = "Seanslar";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
  <div class="d-flex justify-content-between align-items-center">
    <h2><i class="fas fa-clock me-2"></i>Seanslar</h2>
                <a asp-action="Create" class="btn btn-primary">
             <i class="fas fa-plus me-1"></i>Yeni Seans Ekle
        </a>
         </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
       <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
    @if (Model.Any())
            {
       <div class="table-responsive">
                 <table class="table table-hover table-striped">
      <thead class="table-light">
    <tr>
         <th><i class="fas fa-calendar-day me-1"></i>Gün</th>
           <th><i class="fas fa-tag me-1"></i>Seans Adý</th>
         <th><i class="fas fa-clock me-1"></i>Baþlangýç Saati</th>
       <th><i class="fas fa-clock me-1"></i>Bitiþ Saati</th>
            <th class="text-center"><i class="fas fa-users me-1"></i>Kapasite</th>
        <th class="text-center"><i class="fas fa-user-check me-1"></i>Mevcut</th>
    <th class="text-center"><i class="fas fa-toggle-on me-1"></i>Durum</th>
    <th class="text-center"><i class="fas fa-cog me-1"></i>Ýþlemler</th>
       </tr>
</thead>
     <tbody>
       @foreach (var item in Model)
          {
        var dolulukOrani = item.SeansKapasitesi.HasValue && item.SeansKapasitesi.Value > 0
       ? (item.SeansMevcudu ?? 0) * 100.0 / item.SeansKapasitesi.Value
         : 0;
             var dolulukClass = dolulukOrani >= 90 ? "danger" : dolulukOrani >= 70 ? "warning" : "success";

     <tr>
      <td>
       <span class="badge bg-primary">@item.Gun?.Gun</span>
      </td>
                  <td><strong>@item.SeansAdi</strong></td>
  <td>
    <i class="fas fa-play-circle text-success me-1"></i>
         @item.SeansBaslangicSaati.ToString(@"hh\:mm")
              </td>
   <td>
              <i class="fas fa-stop-circle text-danger me-1"></i>
    @item.SeansBitisSaati.ToString(@"hh\:mm")
</td>
      <td class="text-center">
  @if (item.SeansKapasitesi.HasValue)
       {
     <span class="badge bg-info">@item.SeansKapasitesi</span>
       }
     else
                  {
     <span class="text-muted">Sýnýrsýz</span>
      }
   </td>
      <td class="text-center">
        @if (item.SeansKapasitesi.HasValue)
       {
    <span class="badge bg-@dolulukClass">
   @(item.SeansMevcudu ?? 0) / @item.SeansKapasitesi
       <small>(@dolulukOrani.ToString("F0")%)</small>
       </span>
     }
    else
            {
         <span class="badge bg-secondary">@(item.SeansMevcudu ?? 0)</span>
      }
     </td>
        <td class="text-center">
        @if (item.Aktif)
    {
  <span class="badge bg-success">
                 <i class="fas fa-check-circle me-1"></i>Aktif
     </span>
          }
              else
       {
         <span class="badge bg-secondary">
     <i class="fas fa-times-circle me-1"></i>Pasif
 </span>
           }
  </td>
          <td class="text-center">
             <div class="btn-group" role="group">
     <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detaylar">
<i class="fas fa-eye"></i>
          </a>
         <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
           <i class="fas fa-edit"></i>
            </a>
           <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
       <i class="fas fa-trash"></i>
</a>
         </div>
        </td>
           </tr>
    }
    </tbody>
    </table>
        </div>
            }
            else
 {
                <div class="alert alert-info">
         <i class="fas fa-info-circle me-2"></i>
 Henüz kayýtlý seans bulunmamaktadýr.
        <a asp-action="Create" class="alert-link">Ýlk seansý eklemek için týklayýn</a>.
     </div>
   }
      </div>
    </div>
</div>
