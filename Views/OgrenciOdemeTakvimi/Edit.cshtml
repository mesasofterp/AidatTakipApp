@model StudentApp.Models.OgrenciOdemeTakvimi

@{
    ViewData["Title"] = "Ödeme Düzenle";
    var ogrenciAdi = ViewBag.OgrenciAdi as string;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
          <div class="card-header bg-warning">
<h4><i class="fas fa-edit me-2"></i>Ödeme Düzenle</h4>
       </div>
   <div class="card-body">
 @if (!string.IsNullOrEmpty(ogrenciAdi))
       {
      <div class="alert alert-info mb-4">
          <h5 class="mb-0">
           <i class="fas fa-user me-1"></i>@ogrenciAdi
   </h5>
   </div>
  }
       
            <div class="alert alert-warning" role="alert">
     <i class="fas fa-info-circle me-2"></i>
   <strong>Not:</strong> Ödeme tutarýný deðiþtirdiðinizde, bu ve sonraki tüm ödemelerin kalan borç tutarlarý otomatik olarak yeniden hesaplanacaktýr.
     </div>

         <form asp-action="Edit" method="post">
 <input type="hidden" asp-for="Id" />
      <input type="hidden" asp-for="OgrenciId" />
             <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

          <div class="mb-3">
        <label asp-for="OdemeTarihi" class="form-label"></label>
           <div class="input-group">
 <span class="input-group-text"><i class="fas fa-calendar"></i></span>
          <input asp-for="OdemeTarihi" type="date" class="form-control" />
      </div>
           <span asp-validation-for="OdemeTarihi" class="text-danger"></span>
     </div>

         <div class="mb-3">
     <label asp-for="OdenenTutar" class="form-label"></label>
  <div class="input-group">
         <span class="input-group-text" style="font-family: Arial, sans-serif;">&#8378;</span>
       <input asp-for="OdenenTutar" type="number" step="0.01" class="form-control"
          placeholder="0.00" min="0.01" id="odenenTutarInput" />
       </div>
 <span asp-validation-for="OdenenTutar" class="text-danger"></span>
    <small class="form-text text-muted">
            <i class="fas fa-calculator me-1"></i>Bu tutarý deðiþtirdiðinizde kalan borç otomatik hesaplanacaktýr
       </small>
      </div>

            <div class="mb-3">
    <label asp-for="BorcTutari" class="form-label">
       Kalan Borç <span class="badge bg-info">Otomatik Hesaplanýr</span>
      </label>
                  <div class="input-group">
  <span class="input-group-text" style="font-family: Arial, sans-serif;">&#8378;</span>
         <input asp-for="BorcTutari" type="number" step="0.01" class="form-control bg-light"
       placeholder="0.00" min="0" id="borcTutariInput" readonly />
    </div>
   <span asp-validation-for="BorcTutari" class="text-danger"></span>
    <small class="form-text text-muted">
      <i class="fas fa-lock me-1"></i>Bu alan kayýt sonrasý otomatik olarak hesaplanacaktýr
       </small>
      </div>

         <div class="mb-3">
     <label asp-for="Aciklama" class="form-label"></label>
          <textarea asp-for="Aciklama" class="form-control" rows="3" 
    placeholder="Ödeme ile ilgili not veya açýklama..."></textarea>
       <span asp-validation-for="Aciklama" class="text-danger"></span>
     </div>

   <div class="d-flex justify-content-between">
  <a asp-action="Index" asp-route-ogrenciId="@Model.OgrenciId" class="btn btn-secondary">
   <i class="fas fa-arrow-left me-1"></i>Ýptal
       </a>
    <button type="submit" class="btn btn-warning">
   <i class="fas fa-save me-1"></i>Deðiþiklikleri Kaydet
    </button>
       </div>
    </form>
            </div>
  </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
