        <div class="menu-section">
            <h3 class="section-title">
                <i class="fas fa-boxes me-2"></i>Envanter
            </h3>
            <div class="menu-cards">
                <a asp-controller="Envanterler" asp-action="Index" class="menu-card">
                    <div class="menu-card-icon">
