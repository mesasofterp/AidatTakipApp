@model StudentApp.Models.OdemePlanlari

@{
    ViewData["Title"] = "Ödeme Planı Detayları";
}

<div class="row justify-content-center">
    <div class="col-md-8">
   <div class="card">
          <div class="card-header">
         <h4><i class="fas fa-calendar-alt me-2"></i>Ödeme Planı Detayları</h4>
            </div>
  <div class="card-body">
       <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.KursProgrami)</dt>
         <dd class="col-sm-8">
      <i class="fas fa-book me-1"></i>@Html.DisplayFor(model => model.KursProgrami)
     </dd>
   
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Taksit)</dt>
        <dd class="col-sm-8">
   <span class="badge bg-primary">@Model.Taksit Taksit</span>
      </dd>
       
      <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Vade)</dt>
       <dd class="col-sm-8">
  @if (Model.Vade.HasValue)
         {
     <span class="badge bg-info">@Model.Vade gün</span>
           }
      else
     {
      <span class="text-muted">Vade belirtilmemiş</span>
       }
  </dd>
       
              <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tutar)</dt>
        <dd class="col-sm-8">
     <h5 class="text-success mb-0">@Model.Tutar.ToString("C2")</h5>
       </dd>

    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aktif)</dt>
       <dd class="col-sm-8">
             @if (Model.Aktif)
        {
   <span class="badge bg-success">
         <i class="fas fa-check me-1"></i>Aktif
     </span>
      }
       else
   {
            <span class="badge bg-secondary">
   <i class="fas fa-times me-1"></i>Pasif
     </span>
            }
      </dd>

           @if (!string.IsNullOrWhiteSpace(Model.Aciklama))
            {
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aciklama)</dt>
 <dd class="col-sm-8">@Html.DisplayFor(model => model.Aciklama)</dd>
  }

      <dt class="col-sm-4">Versiyon</dt>
       <dd class="col-sm-8">
      <span class="badge bg-secondary">v@Model.Version</span>
       </dd>
                </dl>
           
        <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
           <i class="fas fa-arrow-left me-1"></i>Listeye Dön
           </a>
       <div>
      <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
<i class="fas fa-edit me-1"></i>Düzenle
     </a>
          <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
     <i class="fas fa-trash me-1"></i>Sil
             </a>
         </div>
        </div>
            </div>
        </div>
    </div>
</div>
