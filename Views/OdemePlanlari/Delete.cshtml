@model StudentApp.Models.OdemePlanlari

@{
    ViewData["Title"] = "Ödeme Planı Sil";
}

<div class="row justify-content-center">
    <div class="col-md-8">
     <div class="card">
    <div class="card-header bg-danger text-white">
         <h4><i class="fas fa-exclamation-triangle me-2"></i>Ödeme Planı Sil</h4>
      </div>
   <div class="card-body">
     <div class="alert alert-warning" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
       <strong>Uyarı!</strong> Bu ödeme planını silmek istediğinizden emin misiniz?
      <br/>
<small class="text-muted">
   <strong>Not:</strong> Bu işlem ödeme planını silecektir.
   Eğer sadece pasif yapmak istiyorsanız, liste sayfasından "Pasif Yap" butonunu kullanın.
</small>
     </div>
 
     <dl class="row">
   <dt class="col-sm-4">@Html.DisplayNameFor(model => model.KursProgrami)</dt>
   <dd class="col-sm-8">
      <i class="fas fa-book me-1"></i>@Html.DisplayFor(model => model.KursProgrami)
</dd>
 
     <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TaksitSayisi)</dt>
    <dd class="col-sm-8">
   <span class="badge bg-primary">@Model.TaksitSayisi Taksit</span>
   </dd>

   <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TaksitTutari)</dt>
  <dd class="col-sm-8">
 <strong class="text-info">₺ @Model.TaksitTutari.ToString("N2")</strong>
   </dd>

 <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Vade)</dt>
  <dd class="col-sm-8">
      @if (Model.Vade.HasValue)
   {
 <span class="badge bg-info">@Model.Vade gün</span>
  }
    else
    {
    <span class="text-muted">-</span>
   }
    </dd>
     
 <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ToplamTutar)</dt>
<dd class="col-sm-8">
 <strong class="text-success">₺ @Model.ToplamTutar.ToString("N2")</strong>
 </dd>

    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aktif)</dt>
    <dd class="col-sm-8">
    @if (Model.Aktif)
  {
      <span class="badge bg-success">
       <i class="fas fa-check me-1"></i>Aktif
  </span>
   }
    else
   {
 <span class="badge bg-secondary">
   <i class="fas fa-times me-1"></i>Pasif
      </span>
     }
     </dd>

@if (!string.IsNullOrWhiteSpace(Model.Aciklama))
     {
 <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aciklama)</dt>
     <dd class="col-sm-8">@Html.DisplayFor(model => model.Aciklama)</dd>
}
    </dl>
       
     <form asp-action="Delete" method="post" class="d-flex justify-content-between">
       <a asp-action="Index" class="btn btn-secondary">
  <i class="fas fa-arrow-left me-1"></i>İptal
    </a>
    <button type="submit" class="btn btn-danger">
 <i class="fas fa-trash me-1"></i>Ödeme Planını Sil
        </button>
       </form>
    </div>
        </div>
    </div>
</div>
