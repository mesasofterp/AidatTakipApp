@model IEnumerable<StudentApp.Models.OdemePlanlari>

@{
    ViewData["Title"] = "Ödeme Planları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-alt me-2"></i>Ödeme Planları</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Yeni Ödeme Planı Ekle
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.KursProgrami)</th>
                    <th>@Html.DisplayNameFor(model => model.Taksit)</th>
                    <th>@Html.DisplayNameFor(model => model.Vade)</th>
                    <th>@Html.DisplayNameFor(model => model.Tutar)</th>
                    <th>@Html.DisplayNameFor(model => model.Aktif)</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(x => !x.IsDeleted))
                {
                    <tr class="@(item.Aktif ? "" : "table-secondary")">
                        <td>
                            <i class="fas fa-book me-1"></i>@Html.DisplayFor(modelItem => item.KursProgrami)
                        </td>
                        <td>
                            <span class="badge bg-primary">@item.Taksit Taksit</span>
                        </td>
                        <td>
                            @if (item.Vade.HasValue)
                            {
                                <span class="badge bg-info">@item.Vade gün</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <strong class="text-success">@item.Tutar.ToString("C2")</strong>
                        </td>
                        <td>
                            @if (item.Aktif)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times me-1"></i>Pasif
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detayları Görüntüle">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Ödeme planı bulunamadı</h4>
        <p class="text-muted">İlk ödeme planınızı ekleyerek başlayın.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>İlk Ödeme Planını Ekle
        </a>
    </div>
}
