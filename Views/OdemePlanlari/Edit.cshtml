@model StudentApp.Models.OdemePlanlari

@{
    ViewData["Title"] = "Ödeme Planı Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
     <div class="card">
       <div class="card-header">
   <h4><i class="fas fa-edit me-2"></i>Ödeme Planı Düzenle</h4>
   </div>
   <div class="card-body">
  <form asp-action="Edit" method="post">
   <input asp-for="Id" type="hidden" />
      <input asp-for="IsDeleted" type="hidden" />
          <input asp-for="Version" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
   
            <div class="mb-3">
     <label asp-for="KursProgrami" class="form-label"></label>
     <div class="input-group">
      <span class="input-group-text"><i class="fas fa-book"></i></span>
       <input asp-for="KursProgrami" class="form-control" placeholder="Örn: İngilizce Kursu, Matematik Dersi" />
      </div>
          <span asp-validation-for="KursProgrami" class="text-danger"></span>
      </div>
     
      <div class="row">
       <div class="col-md-6 mb-3">
  <label asp-for="Taksit" class="form-label"></label>
 <div class="input-group">
     <span class="input-group-text"><i class="fas fa-list-ol"></i></span>
     <input asp-for="Taksit" type="number" class="form-control" min="1" placeholder="Taksit sayısı" />
          </div>
  <span asp-validation-for="Taksit" class="text-danger"></span>
       </div>
     
        <div class="col-md-6 mb-3">
          <label asp-for="Vade" class="form-label"></label>
      <div class="input-group">
            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
      <input asp-for="Vade" type="number" class="form-control" min="0" placeholder="Vade süresi (gün)" />
       </div>
<span asp-validation-for="Vade" class="text-danger"></span>
         <small class="form-text text-muted">İsteğe bağlı</small>
      </div>
      </div>
          
   <div class="mb-3">
              <label asp-for="Tutar" class="form-label"></label>
       <div class="input-group">
      <span class="input-group-text"><i class="fas fa-lira-sign"></i></span>
        <input asp-for="Tutar" type="number" step="0.01" class="form-control" min="0" placeholder="0.00" />
   </div>
     <span asp-validation-for="Tutar" class="text-danger"></span>
    </div>

<div class="mb-3">
    <div class="form-check form-switch">
<input asp-for="Aktif" class="form-check-input" type="checkbox" />
    <label asp-for="Aktif" class="form-check-label"></label>
        </div>
         <small class="form-text text-muted">Aktif planlar kullanılabilir</small>
   </div>
    
  <div class="mb-3">
   <label asp-for="Aciklama" class="form-label"></label>
       <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Ödeme planı hakkında ek bilgiler..."></textarea>
         <span asp-validation-for="Aciklama" class="text-danger"></span>
     </div>
     
   <div class="alert alert-info">
        <i class="fas fa-info-circle me-1"></i>
    <small>Versiyon: @Model.Version</small>
     </div>
     
       <div class="d-flex justify-content-between">
       <a asp-action="Index" class="btn btn-secondary">
         <i class="fas fa-arrow-left me-1"></i>İptal
      </a>
 <button type="submit" class="btn btn-primary">
  <i class="fas fa-save me-1"></i>Değişiklikleri Kaydet
        </button>
           </div>
      </form>
     </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
