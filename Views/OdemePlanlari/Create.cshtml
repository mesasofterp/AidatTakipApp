@model StudentApp.Models.OdemePlanlari

@{
    ViewData["Title"] = "Yeni Ödeme Planı Ekle";
}

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
  <div class="card-header">
  <h4><i class="fas fa-plus me-2"></i>Yeni Ödeme Planı Ekle</h4>
        </div>
            <div class="card-body">
  <form asp-action="Create" method="post">
 <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
         
    <div class="mb-3">
           <label asp-for="KursProgrami" class="form-label"></label>
 <div class="input-group">
      <span class="input-group-text"><i class="fas fa-book"></i></span>
     <input asp-for="KursProgrami" class="form-control" placeholder="Örn: İngilizce Kursu, Matematik Dersi" />
   </div>
        <span asp-validation-for="KursProgrami" class="text-danger"></span>
  </div>

        <div class="row">
   <div class="col-md-6 mb-3">
 <label asp-for="TaksitSayisi" class="form-label"></label>
     <div class="input-group">
  <span class="input-group-text"><i class="fas fa-list-ol"></i></span>
  <input asp-for="TaksitSayisi" type="number" class="form-control" min="1" placeholder="Taksit sayısı" id="taksitSayisi" />
       </div>
        <span asp-validation-for="TaksitSayisi" class="text-danger"></span>
     <small class="form-text text-muted">Kaç taksit olacak</small>
        </div>

  <div class="col-md-6 mb-3">
   <label asp-for="TaksitTutari" class="form-label"></label>
      <div class="input-group">
    <span class="input-group-text" style="font-family: Arial, sans-serif;">&#8378;</span>
  <input asp-for="TaksitTutari" type="number" step="0.01" class="form-control" min="0.01" placeholder="0.00" id="taksitTutari" />
     </div>
   <span asp-validation-for="TaksitTutari" class="text-danger"></span>
     <small class="form-text text-muted">Her taksit tutarı</small>
    </div>
      </div>
      
  <div class="alert alert-info" id="toplamHesap" style="display: none;">
<h6><i class="fas fa-calculator me-1"></i>Toplam Tutar Hesaplaması</h6>
     <p class="mb-0"><strong>Toplam Ödenecek:</strong> <span id="toplamTutar">0,00 TL</span></p>
        <small class="text-muted">* Taksit Sayısı × Taksit Tutarı</small>
    </div>

    <div class="mb-3">
         <label asp-for="Vade" class="form-label"></label>
        <div class="input-group">
       <span class="input-group-text"><i class="fas fa-calendar"></i></span>
   <input asp-for="Vade" type="number" class="form-control" min="1" placeholder="Vade süresi (gün)" />
   </div>
    <span asp-validation-for="Vade" class="text-danger"></span>
    <small class="form-text text-muted">Tüm taksitlerin bitmesi beklenen süre (gün) - Opsiyonel</small>
       </div>

  <div class="mb-3">
         <div class="form-check form-switch">
      <input asp-for="Aktif" class="form-check-input" type="checkbox" checked />
  <label asp-for="Aktif" class="form-check-label"></label>
        </div>
   <small class="form-text text-muted">Aktif planlar öğrenci kaydında seçilebilir</small>
 </div>
   
          <div class="mb-3">
       <label asp-for="Aciklama" class="form-label"></label>
   <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Ödeme planı hakkında ek bilgiler..."></textarea>
     <span asp-validation-for="Aciklama" class="text-danger"></span>
       </div>
        
    <div class="d-flex justify-content-between">
         <a asp-action="Index" class="btn btn-secondary">
 <i class="fas fa-arrow-left me-1"></i>İptal
  </a>
      <button type="submit" class="btn btn-primary">
   <i class="fas fa-save me-1"></i>Ödeme Planını Oluştur
 </button>
 </div>
  </form>
   </div>
     </div>
    </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
 function hesapla() {
   var taksitSayisi = parseInt(document.getElementById('taksitSayisi').value) || 0;
    var taksitTutari = parseFloat(document.getElementById('taksitTutari').value) || 0;
  
      if (taksitSayisi > 0 && taksitTutari > 0) {
     var toplam = taksitSayisi * taksitTutari;
     
   document.getElementById('toplamTutar').textContent = toplam.toLocaleString('tr-TR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + ' TL';
     document.getElementById('toplamHesap').style.display = 'block';
     } else {
       document.getElementById('toplamHesap').style.display = 'none';
  }
 }

  document.getElementById('taksitSayisi').addEventListener('input', hesapla);
        document.getElementById('taksitTutari').addEventListener('input', hesapla);
    </script>
}
