<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Öğrenci Uygulaması</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            padding-top: 56px; /* Navbar height */
        }

        /* Sidebar başlangıçta kapalı */
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1030;
            top: 75px; /* header'dan sabit boşluk */
            left: 0;
            background-color: #0b5ed7;
            overflow-x: hidden;
            transition: width 0.3s ease;
            padding-top: 20px;
        }

            .sidebar.open {
                width: 260px;
                z-index: 1040;
            }

            /* Sidebar linkleri */
            .sidebar a,
            .sidebar button {
                padding: 12px 20px;
                text-decoration: none;
                font-size: 1.1rem;
                color: #fff;
                display: block;
                transition: 0.2s;
            }

                .sidebar a:hover,
                .sidebar button:hover {
                    background-color: #0b5ed7;
                }

            /* Grup başlıkları */
            .sidebar .menu-group {
                margin-top: 15px;
                margin-bottom: 10px;
                padding-left: 15px;
                font-weight: 600;
                font-size: 1.1rem;
                color: #dce3ff;
                text-transform: uppercase;
            }

            /* Çizgi */
            .sidebar hr {
                border-color: rgba(255, 255, 255, 0.3);
                margin: 10px 0;
            }

            /* Kapatma butonu */
            .sidebar .closebtn {
                position: absolute;
                top: 10px;
                right: 20px;
                font-size: 2rem;
                color: #fff;
            }

        /* Navbar ayarları */
        .navbar-brand {
            font-weight: bold;
        }

        .navbar .btn i {
            font-size: 1.8rem; /* İkon boyutu */
        }
        /* Tablo ve butonlar */
        .table th {
            background-color: #f8f9fa;
        }

        .btn-group .btn {
            margin-right: 5px;
        }

        /* Genel fontlar */
        .badge, .card h3, .card h5, .card h6, strong, span {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        }
        /* Accordion başlıkları */
        .sidebar .accordion {
            background-color: transparent;
            color: #fff;
            cursor: pointer;
            padding: 12px 20px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 1.15rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: 0.2s;
        }

            .sidebar .accordion:hover {
                background-color: #0b5ed7;
            }

        .sidebar .panel {
            display: none;
            background-color: #0b5ed7;
            padding-left: 20px;
        }

            .sidebar .panel a {
                font-size: 1.1rem;
                padding: 10px 15px;
            }

    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div id="mySidebar" class="sidebar">
        @* <a href="javascript:void(0)" class="closebtn" onclick="toggleNav()">&times;</a> *@

        @if (User?.Identity?.IsAuthenticated == true)
        {
            <!-- Öğrenci Yönetimi -->
            <button class="accordion">
                <i class="fas fa-users me-2"></i> Öğrenci Yönetimi
                <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
            </button>
            <div class="panel">
                <a class="nav-link" asp-controller="Ogrenciler" asp-action="Index">
                    <i class="fas fa-users me-2"></i>Öğrenciler
                </a>
                <a class="nav-link" asp-controller="Ogrenciler" asp-action="Create">
                    <i class="fas fa-user-plus me-2"></i>Yeni Öğrenci
                </a>
            </div>

            <!-- Ödeme Yönetimi -->
            <button class="accordion">
                <i class="fas fa-calendar-alt me-2"></i> Ödeme Yönetimi
                <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
            </button>
            <div class="panel">
                <a class="nav-link" asp-controller="OdemePlanlari" asp-action="Index">
                    <i class="fas fa-calendar-alt me-2"></i>Ödeme Planları
                </a>
                <a class="nav-link" asp-controller="OdemePlanlari" asp-action="Create">
                    <i class="fas fa-calendar-plus me-2"></i>Yeni Ödeme Planı
                </a>
                <a class="nav-link" asp-controller="OgrenciOdemeTakvimi" asp-action="Index">
                    <i class="fas fa-money-check-alt me-2"></i>Ödeme Takvimleri
                </a>
            </div>
            <button class="accordion">
                <i class="fas fa-boxes me-2"></i> Envanter
                <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
            </button>
            <div class="panel">
                <a class="nav-link" asp-area="" asp-controller="Envanterler" asp-action="Index">
                    <i class="fas fa-boxes me-1"></i> Envanter
                </a>
                <a class="nav-link" asp-controller="Envanterler" asp-action="Create">
                    <i class="fas fa-box-open me-1"></i> Yeni Envanter
                </a>
            </div>
            <!-- Araçlar -->
            <button class="accordion">
                <i class="fas fa-tools me-2"></i> Araçlar
                <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
            </button>
            <div class="panel">
                <a class="nav-link" asp-controller="Zamanlayici" asp-action="Index">
                    <i class="fas fa-clock me-2"></i>SMS Zamanlayıcı
                </a>
            </div>

            <hr>
            <form asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-link nav-link">
                    <i class="fas fa-sign-out-alt me-2"></i>Çıkış
                </button>
            </form>
        }
    </div>


    
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary fixed-top">
            <div class="container-fluid justify-content-start align-items-center">
                <button class="btn btn-primary me-2" type="button" onclick="toggleNav()">
                    <i class="fas fa-bars"></i>
                </button>

                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <a class="navbar-brand d-flex align-items-center fs-3 ms-2" asp-area="" asp-controller="Ogrenciler" asp-action="Index">
                        <img src="~/images/fuemlogo.png" alt="Logo"
                             style="height: 50px; width:auto; margin-right: 12px; vertical-align: middle;" />
                        <span style="line-height: 1;">Ödeme Takip AsistanAI</span>
                    </a>
                }
                else
                {
                    <a class="navbar-brand d-flex align-items-center fs-3 ms-2" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="fas fa-graduation-cap me-2" style="font-size: 1.8rem;"></i>
                        <span style="line-height: 1;">Ödeme Takip AsistanAI</span>
                    </a>
                }

            </div>
        </nav>
    </header>


    <div id="main" class="container mt-4">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - FUEM Projects Tüm Hakları Saklıdır. - <a asp-area="" asp-controller="Ogrenciler" asp-action="Index">Öğrenci Takip AsistanAI</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            sidebar.classList.toggle("open");
        }
    </script>
    <script>
        const accordions = document.querySelectorAll(".sidebar .accordion");
        accordions.forEach(acc => {
            acc.addEventListener("click", function() {
                this.classList.toggle("active");
                const panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                    this.querySelector(".toggle-icon").classList.remove("fa-rotate-180");
                } else {
                    panel.style.display = "block";
                    this.querySelector(".toggle-icon").classList.add("fa-rotate-180");
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
