<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Öğrenci Uygulaması</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
    body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
  .navbar-brand {
         font-weight: bold;
        }
        .table th {
            background-color: #f8f9fa;
   }
        .btn-group .btn {
 margin-right: 5px;
        }
        /* TL simgesi için font desteği */
        .badge, .card h3, .card h5, .card h6, strong, span {
 font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <div class="container">
         <a class="navbar-brand" asp-area="" asp-controller="Ogrenciler" asp-action="Index">
                 <i class="fas fa-graduation-cap me-2"></i>Ödeme Takip AsistanAI
    </a>
     <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
              <span class="navbar-toggler-icon"></span>
 </button>
  <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
     <ul class="navbar-nav flex-grow-1">
                 <li class="nav-item">
 <a class="nav-link" asp-area="" asp-controller="Ogrenciler" asp-action="Index">
      <i class="fas fa-users me-1"></i>Öğrenciler
                     </a>
         </li>
    <li class="nav-item">
    <a class="nav-link" asp-area="" asp-controller="OdemePlanlari" asp-action="Index">
        <i class="fas fa-calendar-alt me-1"></i>Ödeme Planları
         </a>
    </li>
                    <li class="nav-item">
                  <a class="nav-link" asp-area="" asp-controller="OgrenciOdemeTakvimi" asp-action="Index">
  <i class="fas fa-money-check-alt me-1"></i>Ödeme Takvimleri
    </a>
     </li>
             <li class="nav-item dropdown">
         <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="fas fa-plus me-1"></i>Yeni Ekle
    </a>
         <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
       <li>
<a class="dropdown-item" asp-controller="Ogrenciler" asp-action="Create">
 <i class="fas fa-user-plus me-1"></i>Yeni Öğrenci
        </a>
         </li>
        <li>
          <a class="dropdown-item" asp-controller="OdemePlanlari" asp-action="Create">
     <i class="fas fa-calendar-plus me-1"></i>Yeni Ödeme Planı
</a>
       </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Zamanlayici" asp-action="Index">
                                        <i class="fas fa-clock me-1"></i>SMS Zamanlayıcı
                                    </a>
                                </li>
                             @*    <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Zamanlayici" asp-action="Index">
                                        <i class="fas fa-clock me-1"></i>SMS Zamanlayıcı
                                    </a>
                                </li> *@
                           
</ul>
            </li>
     </ul>
</div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
      <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
  {
     <div class="alert alert-success alert-dismissible fade show" role="alert">
             <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
         <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    }
   @if (TempData["ErrorMessage"] != null)
      {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
            }
         @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
      &copy; 2024 - Öğrenci Uygulaması - <a asp-area="" asp-controller="Student" asp-action="Index">Öğrenci Yönetim Sistemi</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
