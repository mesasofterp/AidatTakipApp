<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Öğrenci Uygulaması</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true">
    <style>
        /* Sidebar başlangıçta kapalı */
        .sidebar {
            height: calc(100vh - 80px);
            width: 0;
            position: fixed;
            z-index: 1030;
            top: 85px;
            left: 0;
            overflow-x: hidden;
            overflow-y: auto;
            transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
        }

        .sidebar.open {
            width: 280px;
            z-index: 1040;
        }

        /* Sidebar overlay mobil için */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 80px;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1035;
            backdrop-filter: blur(2px);
            transition: opacity 0.3s ease;
        }

        .sidebar-overlay.active {
            display: block;
        }

        .navbar .btn i {
            font-size: 1.5rem;
        }

        .btn-group .btn {
            margin-right: 0.5rem;
        }

        /* Smooth page transitions */
        main {
            animation: fadeIn 0.4s ease-in-out;
        }

        /* Mobil için navbar düzenlemesi */
        @@media (max-width: 576px) {
            .navbar-brand span {
                display: none;
            }
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
        var isLoginPage = string.Equals(controller, "Account", StringComparison.OrdinalIgnoreCase) &&
                          string.Equals(action, "Login", StringComparison.OrdinalIgnoreCase);
    }

    @if (!isLoginPage)
    {
        <div id="sidebarOverlay" class="sidebar-overlay" onclick="toggleNav()"></div>
        <div id="mySidebar" class="sidebar">
            @* <a href="javascript:void(0)" class="closebtn" onclick="toggleNav()">&times;</a> *@

            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                
                bool IsActive(string controller, string action = null)
                {
                    if (string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase))
                    {
                        if (action == null || string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase))
                        {
                            return true;
                        }
                    }
                    return false;
                }
            }

            @if (User?.Identity?.IsAuthenticated == true)
            {
                <!-- Öğrenci Yönetimi -->
                <button class="accordion @(IsActive("Ogrenciler") ? "active" : "")">
                    <i class="fas fa-users me-2"></i> Öğrenci Yönetimi
                    <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
                </button>
                <div class="panel @(IsActive("Ogrenciler") ? "active" : "")">
                    <a class="nav-link @(IsActive("Ogrenciler", "Index") ? "active" : "")" asp-controller="Ogrenciler" asp-action="Index">
                        <i class="fas fa-users me-2"></i>Öğrenciler
                    </a>
                    <a class="nav-link @(IsActive("Ogrenciler", "Create") ? "active" : "")" asp-controller="Ogrenciler" asp-action="Create">
                        <i class="fas fa-user-plus me-2"></i>Yeni Öğrenci
                    </a>
                </div>

                <!-- Ödeme Yönetimi -->
                <button class="accordion @(IsActive("OdemePlanlari") || IsActive("OgrenciOdemeTakvimi") ? "active" : "")">
                    <i class="fas fa-calendar-alt me-2"></i> Ödeme Yönetimi
                    <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
                </button>
                <div class="panel @(IsActive("OdemePlanlari") || IsActive("OgrenciOdemeTakvimi") ? "active" : "")">
                    <a class="nav-link @(IsActive("OdemePlanlari", "Index") ? "active" : "")" asp-controller="OdemePlanlari" asp-action="Index">
                        <i class="fas fa-calendar-alt me-2"></i>Ödeme Planları
                    </a>
                    <a class="nav-link @(IsActive("OdemePlanlari", "Create") ? "active" : "")" asp-controller="OdemePlanlari" asp-action="Create">
                        <i class="fas fa-calendar-plus me-2"></i>Yeni Ödeme Planı
                    </a>
                    <a class="nav-link @(IsActive("OgrenciOdemeTakvimi") ? "active" : "")" asp-controller="OgrenciOdemeTakvimi" asp-action="Index">
                        <i class="fas fa-money-check-alt me-2"></i>Ödeme Takvimleri
                    </a>
                </div>
                <button class="accordion @(IsActive("Envanterler") ? "active" : "")">
                    <i class="fas fa-boxes me-2"></i> Envanter
                    <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
                </button>
                <div class="panel @(IsActive("Envanterler") ? "active" : "")">
                    <a class="nav-link @(IsActive("Envanterler", "Index") ? "active" : "")" asp-area="" asp-controller="Envanterler" asp-action="Index">
                        <i class="fas fa-boxes me-1"></i> Envanter
                    </a>
                    <a class="nav-link @(IsActive("Envanterler", "Create") ? "active" : "")" asp-controller="Envanterler" asp-action="Create">
                        <i class="fas fa-box-open me-1"></i> Yeni Envanter
                    </a>
                </div>
                <!-- Araçlar -->
                <button class="accordion @(IsActive("Zamanlayici") ? "active" : "")">
                    <i class="fas fa-tools me-2"></i> Araçlar
                    <i class="fas fa-chevron-down ms-auto toggle-icon"></i>
                </button>
                <div class="panel @(IsActive("Zamanlayici") ? "active" : "")">
                    <a class="nav-link @(IsActive("Zamanlayici") ? "active" : "")" asp-controller="Zamanlayici" asp-action="Index">
                        <i class="fas fa-clock me-2"></i>SMS Zamanlayıcı
                    </a>
                </div>

                <div style="margin-top: auto; padding-top: 1.5rem;">
                    <hr>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link" style="width: 100%; color: rgba(255, 255, 255, 0.9); padding: 0.875rem 1.5rem; border: none; background: transparent; text-align: left; cursor: pointer; font-weight: 500;">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </button>
                    </form>
                </div>
            }
        </div>
    }


    
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
            <div class="container-fluid justify-content-between align-items-center px-4">
                <div class="d-flex align-items-center">
                    @if (!isLoginPage)
                    {
                        <button class="btn btn-link text-white me-3 p-2" type="button" onclick="toggleNav()" style="border-radius: 0.5rem;">
                            <i class="fas fa-bars"></i>
                        </button>
                    }

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <a class="navbar-brand d-flex align-items-center ms-2" asp-area="" asp-controller="Ogrenciler" asp-action="Index" style="font-size: 1.5rem;">
                            <img src="~/images/fuemlogo.png" alt="Logo"
                                 style="height: 45px; width:auto; margin-right: 12px; vertical-align: middle; filter: brightness(0) invert(1);" />
                            <span style="line-height: 1.2; font-weight: 600;">Ödeme Takip AsistanAI</span>
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand d-flex align-items-center ms-2" asp-area="" asp-controller="Account" asp-action="Login" style="font-size: 1.5rem;">
                            <img src="~/images/fuemlogo.png" alt="Logo"
                                 style="height: 45px; width:auto; margin-right: 12px; vertical-align: middle; filter: brightness(0) invert(1);" />
                            <span style="line-height: 1.2; font-weight: 600;">Ödeme Takip AsistanAI</span>
                        </a>
                    }
                </div>

                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="dropdown">
                        <button class="btn btn-link text-white text-decoration-none dropdown-toggle d-flex align-items-center px-3 py-2" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border-radius: 0.5rem; transition: all 0.2s;">
                            <div class="d-flex align-items-center justify-content-center bg-white bg-opacity-20 rounded-circle me-2" style="width: 36px; height: 36px;">
                                <i class="fas fa-user" style="font-size: 1rem;"></i>
                            </div>
                            <span style="font-weight: 500;">@User.Identity.Name</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="profileDropdown" style="min-width: 220px; border: none; margin-top: 0.5rem;">
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user me-2 text-primary"></i>Profilim
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                    <i class="fas fa-key me-2 text-warning"></i>Şifre Değiştir
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                                        <i class="fas fa-users me-2 text-info"></i>Kullanıcı Yönetimi
                                    </a>
                                </li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>


    <div id="main" class="container-fluid px-3 px-md-4 mt-3 mt-md-4">
        <main role="main" class="pb-4">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-soft" role="alert" style="border-left: 4px solid var(--success-500);">
                    <i class="fas fa-check-circle me-2"></i><strong>Başarılı!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-soft" role="alert" style="border-left: 4px solid var(--danger-500);">
                    <i class="fas fa-exclamation-circle me-2"></i><strong>Hata!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5">
        <div class="container text-center py-4">
            <p class="mb-2">
                &copy; 2025 - <strong>FUEM Projects</strong> Tüm Hakları Saklıdır.
            </p>
            <p class="mb-0">
                <a asp-area="" asp-controller="Ogrenciler" asp-action="Index" class="text-decoration-none">
                    <i class="fas fa-graduation-cap me-1"></i>Öğrenci Takip AsistanAI
                </a>
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            sidebar.classList.toggle("open");
        }
    </script>
    <script>
        // Sidebar accordion'ları için
        document.addEventListener('DOMContentLoaded', function() {
            const accordions = document.querySelectorAll(".sidebar .accordion");
            
            // Tüm panel'leri başlangıçta kapalı yap (aktif sayfa içerenler hariç)
            accordions.forEach(acc => {
                const panel = acc.nextElementSibling;
                if (panel && panel.classList.contains('panel')) {
                    const hasActiveLink = panel.querySelector('a.active');
                    if (hasActiveLink) {
                        // Aktif sayfa içeren accordion'u açık tut
                        panel.style.display = 'block';
                        panel.classList.add('active');
                        acc.classList.add('active');
                        const toggleIcon = acc.querySelector('.toggle-icon');
                        if (toggleIcon) toggleIcon.classList.add('fa-rotate-180');
                    } else {
                        panel.style.display = 'none';
                        panel.classList.remove('active');
                    }
                }
            });

            accordions.forEach(acc => {
                acc.addEventListener("click", function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const panel = this.nextElementSibling;
                    const toggleIcon = this.querySelector(".toggle-icon");
                    
                    if (!panel || !panel.classList.contains('panel')) {
                        return;
                    }

                    // Diğer accordion'ları kapat (opsiyonel - tek seferde bir açık olsun isterseniz)
                    // accordions.forEach(otherAcc => {
                    //     if (otherAcc !== this) {
                    //         const otherPanel = otherAcc.nextElementSibling;
                    //         const otherIcon = otherAcc.querySelector(".toggle-icon");
                    //         if (otherPanel && otherPanel.classList.contains('panel')) {
                    //             otherPanel.style.display = 'none';
                    //             otherPanel.classList.remove('active');
                    //             otherAcc.classList.remove('active');
                    //             if (otherIcon) otherIcon.classList.remove("fa-rotate-180");
                    //         }
                    //     }
                    // });

                    // Eğer aktif sayfa bu accordion içindeyse, accordion'u açık tut
                    const hasActiveLink = panel.querySelector('a.active');
                    if (hasActiveLink && (panel.style.display === "none" || !panel.classList.contains('active'))) {
                        panel.style.display = "block";
                        panel.classList.add('active');
                        this.classList.add("active");
                        if (toggleIcon) toggleIcon.classList.add("fa-rotate-180");
                        return;
                    }

                    // Mevcut accordion'u toggle et
                    if (panel.style.display === "none" || !panel.classList.contains('active')) {
                        panel.style.display = "block";
                        panel.classList.add('active');
                        this.classList.add("active");
                        if (toggleIcon) toggleIcon.classList.add("fa-rotate-180");
                    } else {
                        panel.style.display = "none";
                        panel.classList.remove('active');
                        this.classList.remove("active");
                        if (toggleIcon) toggleIcon.classList.remove("fa-rotate-180");
                    }
                });
            });
        });
    </script>
    <script>
        const sidebar = document.getElementById("mySidebar");

        // Hamburger buton toggle
        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const overlay = document.getElementById("sidebarOverlay");
            
            sidebar.classList.toggle("open");
            if (overlay) {
                overlay.classList.toggle("active");
            }
        }

        // Sayfa içerik alanına tıklayınca sidebar kapansın (mobilde)
        document.addEventListener("click", function(event) {
            const sidebar = document.getElementById("mySidebar");
            const overlay = document.getElementById("sidebarOverlay");
            
            // Mobilde overlay'e tıklanınca kapat
            if (event.target === overlay) {
                sidebar.classList.remove("open");
                overlay.classList.remove("active");
                return;
            }
            
            // Eğer tıklanan sidebar veya hamburger buton değilse
            if (window.innerWidth <= 768) {
                if (!sidebar.contains(event.target) &&
                    !event.target.closest('.navbar .btn') &&
                    !event.target.closest('#sidebarOverlay')) {
                    sidebar.classList.remove("open");
                    if (overlay) overlay.classList.remove("active");
                }
            }
        });

        // Ekran boyutu değiştiğinde sidebar'ı kapat
        window.addEventListener('resize', function() {
            const sidebar = document.getElementById("mySidebar");
            const overlay = document.getElementById("sidebarOverlay");
            
            if (window.innerWidth > 768) {
                sidebar.classList.remove("open");
                if (overlay) overlay.classList.remove("active");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
